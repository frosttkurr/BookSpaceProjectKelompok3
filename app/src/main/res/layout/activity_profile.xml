<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_nofill01"
    tools:context=".activity.home.ProfileActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingVertical="30dp"
        android:paddingHorizontal="55dp">

        <TextView
            android:id="@+id/label_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/purple"
            android:textSize="35dp"
            android:textStyle="bold"
            android:layout_marginBottom="10dp"
            android:text="Profile" />

        <ImageView
            android:id="@+id/icon_profile"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_marginBottom="10dp"
            app:srcCompat="@drawable/user" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/label_nama"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/purple"
                android:paddingHorizontal="20dp"
                android:textStyle="bold"
                android:layout_marginBottom="2dp"
                android:text="Nama Lengkap" />

            <TextView
                android:id="@+id/profile_nama"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@drawable/form_pink"
                android:text="Nama Lengkap"
                android:minHeight="48dp"
                android:paddingHorizontal="20dp"
                android:paddingVertical="15dp"
                android:textColor="@color/purple"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/label_jk"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/purple"
                android:paddingHorizontal="20dp"
                android:textStyle="bold"
                android:layout_marginBottom="2dp"
                android:text="Jenis Kelamin" />

            <TextView
                android:id="@+id/profile_jk"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@drawable/form_pink"
                android:minHeight="48dp"
                android:paddingHorizontal="20dp"
                android:paddingVertical="15dp"
                android:text="Jenis Kelamin"
                android:textColor="@color/purple"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/label_noTelp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:paddingHorizontal="20dp"
                android:text="No Telpon"
                android:textColor="@color/purple"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/profile_noTelp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@drawable/form_pink"
                android:minHeight="48dp"
                android:paddingHorizontal="20dp"
                android:paddingVertical="15dp"
                android:text="No Telpon"
                android:textColor="@color/purple"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/label_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/purple"
                android:paddingHorizontal="20dp"
                android:textStyle="bold"
                android:layout_marginBottom="2dp"
                android:text="Username" />

            <TextView
                android:id="@+id/profile_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@drawable/form_pink"
                android:maxLength="10"
                android:minHeight="48dp"
                android:paddingHorizontal="20dp"
                android:paddingVertical="15dp"
                android:text="Username"
                android:textColor="@color/purple"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/label_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/purple"
                android:paddingHorizontal="20dp"
                android:textStyle="bold"
                android:layout_marginBottom="2dp"
                android:text="Email" />

            <TextView
                android:id="@+id/profile_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@drawable/form_pink"
                android:minHeight="48dp"
                android:paddingHorizontal="20dp"
                android:paddingVertical="15dp"
                android:text="Email"
                android:textColor="@color/purple"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/label_alamat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/purple"
                android:paddingHorizontal="20dp"
                android:textStyle="bold"
                android:layout_marginBottom="2dp"
                android:text="Alamat" />

            <TextView
                android:id="@+id/profile_alamat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@drawable/form_pink"
                android:text="Alamat"
                android:minHeight="48dp"
                android:paddingHorizontal="20dp"
                android:paddingVertical="15dp"
                android:textColor="@color/purple"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/label_minatbaca"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/purple"
                android:paddingHorizontal="20dp"
                android:textStyle="bold"
                android:layout_marginBottom="2dp"
                android:text="Minat Membaca" />

            <TextView
                android:id="@+id/profile_minatbaca"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:background="@drawable/form_pink"
                android:text="Minat Membaca"
                android:minHeight="48dp"
                android:paddingHorizontal="15dp"
                android:paddingVertical="15dp"
                android:textColor="@color/purple"
                android:textSize="16dp" />

            <Button
                android:id="@+id/btn_hapus_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@drawable/button_purple"
                android:paddingHorizontal="45dp"
                android:text="Hapus Akun"
                android:textColor="@color/white"
                app:backgroundTint="@null" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>