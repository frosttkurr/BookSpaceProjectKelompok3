<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_nofill03"
    tools:context=".activity.home.LobbyActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="40dp"
            android:paddingTop="30dp"
            android:paddingBottom="5dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/display_picture"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginRight="12dp"
                app:srcCompat="@drawable/user" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/display_nama"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:text="Nama Pengguna"
                    android:textColor="@color/purple"
                    android:textSize="17dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/display_alamat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Alamat"
                    android:textColor="@color/purple"
                    android:textSize="15dp" />
            </LinearLayout>

            <ImageView
                android:id="@+id/icon_logout"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:srcCompat="@drawable/shutdown" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="35dp"
            android:paddingVertical="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="15dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/label_kategori"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/pink"
                android:textStyle="bold"
                android:textSize="25dp"
                android:text="Kategori Buku" />

        </LinearLayout>

        <HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scrollbars="none"            >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginBottom="5dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_marginLeft="25dp"
                        android:layout_marginRight="15dp"
                        android:orientation="vertical">

                        <androidx.cardview.widget.CardView
                            android:layout_width="100dp"
                            android:layout_height="150dp"
                            android:layout_marginBottom="10dp"
                            app:cardCornerRadius="15dp">

                            <ImageView
                                android:id="@+id/cover_edukasi"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                app:srcCompat="@drawable/bookcover_3" />
                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:id="@+id/kategori_edukasi"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="2dp"
                            android:text="Edukasi"
                            android:textColor="@color/pink"
                            android:textSize="18dp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/keterangan_edukasi"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Buku Edukasi"
                            android:textColor="@color/pink"
                            android:textSize="12dp"
                            android:textStyle="normal" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_marginRight="15dp"
                        android:orientation="vertical">

                        <androidx.cardview.widget.CardView
                            android:layout_width="100dp"
                            android:layout_height="150dp"
                            android:layout_marginBottom="10dp"
                            app:cardCornerRadius="15dp">

                            <ImageView
                                android:id="@+id/cover_ilmiah"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                app:srcCompat="@drawable/bookcover_2" />
                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:id="@+id/ilmiah"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="2dp"
                            android:text="Ilmiah"
                            android:textColor="@color/pink"
                            android:textSize="18dp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/keterangan_ilmiah"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Buku Ilmiah"
                            android:textColor="@color/pink"
                            android:textSize="12dp"
                            android:textStyle="normal" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_marginRight="15dp"
                        android:orientation="vertical">

                        <androidx.cardview.widget.CardView
                            android:layout_width="100dp"
                            android:layout_height="150dp"
                            android:layout_marginBottom="10dp"
                            app:cardCornerRadius="15dp">

                            <ImageView
                                android:id="@+id/cover_fiksi"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                app:srcCompat="@drawable/bookcover_1" />
                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:id="@+id/fiksi"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="2dp"
                            android:text="Fiksi"
                            android:textColor="@color/pink"
                            android:textSize="18dp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/keterangan_fiksi"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Buku Fiksi"
                            android:textColor="@color/pink"
                            android:textSize="12dp"
                            android:textStyle="normal" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_marginRight="15dp"
                        android:orientation="vertical">

                        <androidx.cardview.widget.CardView
                            android:layout_width="100dp"
                            android:layout_height="150dp"
                            android:layout_marginBottom="10dp"
                            app:cardCornerRadius="15dp">

                            <ImageView
                                android:id="@+id/cover_sejarah"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                app:srcCompat="@drawable/bookcover_5" />
                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:id="@+id/sejarah"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="2dp"
                            android:text="Sejarah"
                            android:textColor="@color/pink"
                            android:textSize="18dp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/keterangan_sejarah"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Buku Sejarah"
                            android:textColor="@color/pink"
                            android:textSize="12dp"
                            android:textStyle="normal" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_marginRight="15dp"
                        android:orientation="vertical">

                        <androidx.cardview.widget.CardView
                            android:layout_width="100dp"
                            android:layout_height="150dp"
                            android:layout_marginBottom="10dp"
                            app:cardCornerRadius="15dp">

                            <ImageView
                                android:id="@+id/cover_bisnis"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                app:srcCompat="@drawable/bookcover_4" />
                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:id="@+id/bisnis"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="2dp"
                            android:text="Bisnis"
                            android:textColor="@color/pink"
                            android:textSize="18dp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/keterangan_bisnis"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Buku Bisnis"
                            android:textColor="@color/pink"
                            android:textSize="12dp"
                            android:textStyle="normal" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_marginRight="15dp"
                        android:orientation="vertical">

                        <androidx.cardview.widget.CardView
                            android:layout_width="100dp"
                            android:layout_height="150dp"
                            android:layout_marginBottom="10dp"
                            app:cardCornerRadius="15dp">

                            <ImageView
                                android:id="@+id/cover_novel"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                app:srcCompat="@drawable/bookcover_6" />
                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:id="@+id/novel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="2dp"
                            android:text="Novel"
                            android:textColor="@color/pink"
                            android:textSize="18dp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/keterangan_novel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Novel"
                            android:textColor="@color/pink"
                            android:textSize="12dp"
                            android:textStyle="normal" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_marginRight="15dp"
                        android:orientation="vertical">

                        <androidx.cardview.widget.CardView
                            android:layout_width="100dp"
                            android:layout_height="150dp"
                            android:layout_marginBottom="10dp"
                            app:cardCornerRadius="15dp">

                            <ImageView
                                android:id="@+id/cover_majalah"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                app:srcCompat="@drawable/bookcover_2" />
                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:id="@+id/majalah"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="2dp"
                            android:text="Majalah"
                            android:textColor="@color/pink"
                            android:textSize="18dp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/keterangan_majalah"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Majalah"
                            android:textColor="@color/pink"
                            android:textSize="12dp"
                            android:textStyle="normal" />

                    </LinearLayout>

                </LinearLayout>

        </HorizontalScrollView>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal"
                    android:paddingLeft="40dp"
                    android:paddingVertical="10dp">

                    <TextView
                        android:id="@+id/label_peminjaman"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Peminjaman Buku"
                        android:textColor="@color/pink"
                        android:textSize="25dp"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginBottom="20dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="30dp"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/btn_pinjam"
                            android:layout_width="match_parent"
                            android:layout_height="75dp"
                            android:layout_marginBottom="5dp"
                            app:srcCompat="@drawable/add_book" />

                        <TextView
                            android:id="@+id/label_pinjam"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="2dp"
                            android:text="Pinjam Buku"
                            android:textColor="@color/pink"
                            android:textSize="15dp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_marginRight="25dp"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/btn_list"
                            android:layout_width="match_parent"
                            android:layout_height="75dp"
                            android:layout_marginBottom="5dp"
                            app:srcCompat="@drawable/list_book" />

                        <TextView
                            android:id="@+id/label_list"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="2dp"
                            android:text="List Pinjam"
                            android:textColor="@color/pink"
                            android:textSize="15dp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/btn_tambah"
                            android:layout_width="match_parent"
                            android:layout_height="75dp"
                            android:layout_marginBottom="5dp"
                            app:srcCompat="@drawable/add_category" />

                        <TextView
                            android:id="@+id/label_tambah"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="2dp"
                            android:text="Tambah Buku"
                            android:textColor="@color/pink"
                            android:textSize="15dp"
                            android:textStyle="bold" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/btn_about"
                            android:layout_width="match_parent"
                            android:layout_height="55dp"
                            android:layout_marginBottom="5dp"
                            app:srcCompat="@drawable/info" />

                        <TextView
                            android:id="@+id/label_about"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:text="Tentang Aplikasi"
                            android:textColor="@color/pink"
                            android:textSize="15dp"
                            android:textStyle="bold" />

                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>